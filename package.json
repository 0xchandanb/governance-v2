{
  "name": "governance-v2",
  "version": "1.0.0",
  "description": "Aave Governance v2 smart contracts",
  "scripts": {
    "run-env": "npm i && tail -f /dev/null",
    "hardhat": "hardhat",
    "compile": "SKIP_LOAD=true hardhat compile",
    "test": "SKIP_LOAD=true TS_NODE_TRANSPILE_ONLY=1 hardhat test",
    "coverage": "buidler compile --force && buidler coverage --network coverage",
